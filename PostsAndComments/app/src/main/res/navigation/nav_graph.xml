<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/postListFragment">

    <fragment
        android:id="@+id/postListFragment"
        android:name="com.example.postscommentsapp.presentation.postlist.PostListFragment"
        android:label="Posts">

        <action
            android:id="@+id/action_postListFragment_to_postDetailFragment"
            app:destination="@id/postDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/postDetailFragment"
        android:name="com.example.postscommentsapp.presentation.postdetail.PostDetailFragment"
        android:label="Detalle del Post" >
        <argument
            android:name="postId"
            app:argType="integer" />
        
        <action
            android:id="@+id/action_postDetailFragment_to_commentListFragment"
            app:destination="@id/commentListFragment" />
    </fragment>


    <fragment
        android:id="@+id/commentListFragment"
        android:name="com.example.postscommentsapp.presentation.comments.CommentListFragment"
        android:label="Comments"
        tools:layout="@layout/fragment_comment_list">
        <argument
            android:name="postId"
            app:argType="integer" />
    </fragment>

</navigation>
